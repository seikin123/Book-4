<h1>Books#index</h1>
<h2>User info</h2>
<%= render 'users/profile', user: @user %>

<h2>New book</h2>
<%= render 'books/book', book: @booknew %>

<h2>Books</h2>
<% @books.each do |book| %>

<%= attachment_image_tag @book, :profile_image, size: "40x40", fallback: "no_image.jpg" %>

<td>title</td>
<%= link_to book.title, book_path(book.id) %>

<td>Opinion</td>
<td><%= book.body %></td>

<% end %>
